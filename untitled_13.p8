function new_p(x,y)
	p={}
	p.x=x
	p.y=y
	p.dy=0
	p.draw=function(this)
		local thr=1
		if this.dy>thr then
			spr(3,this.x,this.y)
		elseif this.dy<-thr then
			spr(2,this.x,this.y)
		else
			spr(1,this.x,this.y)
		end
	end
	p.update=function(this)
