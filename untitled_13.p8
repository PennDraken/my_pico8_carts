function new_pipe(x,y)
	pipe={}
	pipe.x=x
	pipe.y=y
	pipe.gap=70
	pipe.draw=function(this)
		spr(82,this.x,this.y,2,1)
		for i=1,12 do
			spr(66,this.x,this.y-i*8,2,1)
		end
		spr(64,this.x,this.y+pipe_gap,2,1)
		for i=1,12 do
			spr(80,this.x,this.y+i*8+pipe_gap,2,1)
		end
	end
	pipe.update=function(this)
		this.x-=move_speed
		if this.x+16<0 then
			this.x+=#pipes*pipe_distance
		end
	end
	return pipe
end

function rndy()
	local miny=10
	return rnd(floory-pipe_gap)
end

function _init()
	score=0
	last_pipe=nil
	move_speed=0.6
	pipe_gap=60
	pipe_distance=60
	p=new_p(10,64)
	floory=100
	pipes={}
	for i=0,10 do
		add(pipes,new_pipe(200+i*pipe_distance,rndy()))
	end
	drw=draw_game
	upd=update_game
end

function _draw()
	drw()
end

function _update60()
	upd()
end
