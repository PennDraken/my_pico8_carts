function draw_game()
	cls(12)
	p:draw()
	for pipe in all(pipes) do
		pipe:draw()
	end
	rectfill(0,floory,128,128,15)
	for i=0,16 do
		spr(68,i*8+pipes[1].x%8-8,floory)
	end
	print("score:"..score,56,20,7)

end

function draw_go()
	cls(12)
	p:draw()
	for pipe in all(pipes) do
		pipe:draw()
	end
	rectfill(0,floory,128,128,15)
	for i=0,16 do
		spr(68,i*8+pipes[1].x%8-8,floory)
	end
	print("game over",52,20,7)
	print("score"..score,56,30,7)
end
