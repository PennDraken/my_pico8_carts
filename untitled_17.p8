function draw_cloud(x,y,cloudc)
	local nsegs=5
	local maxr =10
	local spread=maxr*2
	local varf =0.6
	for i=1,nsegs do
		local ox=rnd(spread)-spread/2
		local oy=rnd(spread)-spread/2
		circfill(x+ox,y+oy,flr(maxr/i)+rnd(3),cloudc)
	end
end

function draw_sky(y,skycs,cloudc,nclouds)
	rectfill(0,0,128,y,skycs[1])
	for i=1,nclouds do
		local x=flr(rnd(128))
		local y=flr(rnd(y))
		draw_cloud(x,y,cloudc)
	end
end

