version 41
__lua__
--init
function _init()
	cls()
	interest=1.05
	--start
	m_start=450000
	?m_start
	m_owed=158000
	--loan contributions
	loan=7000--per month (8400 10 months)
	loan_years=3--3 years
	--income after loan years
	sal=29000--post taxes
	sal_save=sal-15000
	--graduation
	
	m_grad=m_calc(m_start,loan,interest,loan_years)
	stop()
	loan_when_working=m_owed+loan*loan_years*12
	--working
	m_final=m_calc(m_grad,sal_save,interest,10)
	m_loan_payed=m_final-loan_when_working
end

--start,monthly savings,interest,years
function m_calc(s,m,i,years)
	?"m_start:"..s
	?m
	?i
	?years
	for i=1,years do
		s=s+12*m
		s=s*i
		?"m"..m
		?s
	end
	?s
	stop()
	return s
end

