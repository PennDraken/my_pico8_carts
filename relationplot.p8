pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
cx=0
cy=0
thr=0.05

function f(x,y)
	return (1/x-1/y) % thr*2 < thr
end

function _draw()
	camera(cx,cy)
	for x=cx-64,cx+64 do
		for y=cy-64,cy+64 do
			if f(x,y) then
				pset(x+64,y+64,11)
			else
				pset(x+64,y+64,1)
			end
		end
	end
end

function _update60()
	if btn(⬅️) then
		cx-=1
	elseif btn(➡️) then
		cx+=1
	end
	if btn(⬆️) then
		cy-=1
	elseif btn(⬇️) then
		cy+=1
	end
	if btn(❎) then
		thr-=0.0001
	elseif btn(🅾️) then
		thr+=0.0001
	end
	if thr<0 then
		thr=0
	end
end
