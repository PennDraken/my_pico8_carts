--draw
function drw_game()
	cls(12)
	for pipe in all(pipes) do
		pipe:draw()
	end
	--floor
	rectfill(0,floory,128,128,15)
	for i=0,16 do
		spr(68,i*8,floory)
	end
	p:draw()
end

function drw_game_over()
	cls(12)
	for pipe in all(pipes) do
		pipe:draw()
	end
	--floor
	rectfill(0,floory,128,128,15)
	for i=0,16 do
		spr(68,i*8,floory)
	end
	p:draw()
	--text
	print("game over",64-4.5*4,20,7)
	print("score:"..score,64-4.5*4,30,7)
end




