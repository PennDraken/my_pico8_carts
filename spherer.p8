--misc
function lerp(tar,pos,perc)
 return (1-perc)*tar + perc*pos;
end

function smove(pos,tar,inc)
	if pos<tar-inc then
		return pos+inc
	elseif pos>tar+inc then
		return pos-inc
	else
		return tar
	end
end
