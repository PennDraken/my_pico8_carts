function _init()
	dist=0
	p=new_p(2*16,8*12)
	dbg=""
end

function new_p(x,y)
 p={
 	x=x,
 	y=y,
 	tx=x,
 	ty=y
 }
 
	p.draw=function(this)
		if this.tx!=this.x then
			spr(70,this.x,this.y,2,2)
		else
			spr(64,this.x,this.y,2,2)
		end
	end
	
	p.update=function(this)
		if this.tx!=this.x then
			this.x=smove(this.x,this.tx,3)
		end
	end
 
 p.go_left=function(this)
 	this.tx=this.x-16
 end
 
 p.go_right=function(this)
 	this.tx=this.x+16
 end
  
 return p
end
