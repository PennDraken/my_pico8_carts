function _update()
	local da=0.01
	if btn(⬆️) then
		theta=(theta+da)%1
	elseif btn(⬇️) then
		theta=(theta-da)%1
	end
	if btn(➡️) then
		phi=(phi+da)%1
	elseif btn(⬅️) then
		phi=(phi-da)%1
	end
end
-->8
function _draw()
	cls(1)
	circfill(p_c.x,p_c.y,r,5)
	circ(p_c.x,p_c.y,r,7)
	p1=to_point(r,theta,phi)
	circfill(p_c.x+p1.x,p_c.y+p1.y,2,7)
end

function to_point(r,theta,phi)
	local x=r*cos(theta)*cos(phi)
	local y=r*sin(theta)
	return {x=x,y=y}
end
