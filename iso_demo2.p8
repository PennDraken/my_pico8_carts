function _init()
	r=20
	--point
	theta=1/8
	phi=1/8
	--sphere
	s_theta=0
	s_phi  =0
	p_c={x=64,y=64}
end
-->8
function _update()
	local da=0.01
	if btn(⬆️) then
		s_theta=(s_theta+da)%1
	elseif btn(⬇️) then
		s_theta=(s_theta-da)%1
	end
	if btn(➡️) then
		s_phi=(s_phi+da)%1
	elseif btn(⬅️) then
		s_phi=(s_phi-da)%1
	end
end


-->8
function _draw()
	cls(1)
	circfill(p_c.x,p_c.y,r,5)
	circ(p_c.x,p_c.y,r,7)
	local dt=delta_theta(s_theta,s_phi)
	p1=to_point(r,theta+dt,phi)
	circfill(p_c.x+p1.x,p_c.y+p1.y,2,7)
end

function to_point(r,theta,phi)
	local x=r*cos(theta)*cos(phi)
	local y=r*sin(theta)
	return {x=x,y=y}
end

function delta_theta(theta,phi)
	local dt=theta*sin(phi)
	return dt
end
