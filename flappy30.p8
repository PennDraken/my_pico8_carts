function drw_game()
	cls(12)
	for pipe in all(pipes) do
		pipe:draw()
	end
	--draw_floor()
	p:draw()
	print("score:"..score,64-4*4.5,20,7)
end




function drw_game_over()
	cls(12)
	for pipe in all(pipes) do
		pipe:draw()
	end
	p:draw()
	print("game over",64-4*4.5,20,7)
end
