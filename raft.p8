--init&objects
function _init()
	c=new_cam(0,0)
	base={}
	add(base,new_g(1,4,4))
	p=new_p(192,64,64)
end

--player
function new_p(n,x,y)
	p={}
	p.n=n
	p.x=x
	p.y=y
	p.dx=0
	p.dy=0
	p.mv=1--max velocity
	p.states={"idle","walk","swim","interact"}
	p.state=p.states[1]--"idle"
	
	p.draw=function(this)
		_x=this.x-c.x
		_y=this.y-c.y
		if this.state=="idle" then
			spr(this.n,_x,_y)
		elseif this.state=="walk" then
			spr(this.n,_x,_y)
		elseif this.state=="swim" then
			spr(193,_x,_y)
		end
	end
	
	p.update=function(this)
		--state finder
		_x=this.x/8
		_y=this.y/8
		for o in all(base) do
			if o.x<_x and o.y<_y and
						_x<o.x+8 and _y<o.y+8
				then
				this.state="idle"
			else
				this.state="swim"
			end
		end
		--movement update
		this.x+=this.dx*this.mv
		this.y+=this.dy*this.mv
	end
	
	return p
end

--boat platform/ground
function new_g(n,x,y)
	o={}
	o.n=n
	o.x=x
	o.y=y
	
	o.draw=draw_o
	
	return o
end

function draw_o(o)
	spr(o.n,o.x*8-c.x,o.y*8-c.y)
end
-->8
--draw
function _draw()
	cls(12)
	--ocean
	
	--base
	for o in all(base) do
		o:draw()
	end
	
	--player
	p:draw()
end
-->8
--update
function _update()
	p_input()
	
	p:update()
end

--player input
function p_input()
	p.dx=0
	p.dy=0
	if btn(⬅️) then
		p.dx=-1
	elseif btn(➡️) then
		p.dx=1
	end
	if btn(⬆️) then
		p.dy=-1
	elseif btn(⬇️) then
		p.dy=1
	end
end
