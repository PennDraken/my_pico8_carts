__lua__
--init
function _init()
	poke(0x5f2d, 1)
	mpp=0
	--array containing points
	walls={}
end

-->8
--draw
function _draw()
	cls()
	spr(1,mx,my)--mouse
	for i=2,#walls do
		p1=walls[i-1]
		p2=walls[i]
		circ(p1.x,p1.y,1)
		circ(p2.x,p2.y,1)
		line(p1.x,p1.y,p2.x,p2.y)
	end
	
end
-->8
--update
function _update()
	mx=stat(32)
	my=stat(33)
	mp=stat(34)--mouse press
	--walls
	if mp!=mpp then--on new mouse input
		new_input()
		mpp=mp
	end
end

function new_input()
	if mp==1 then
		add(walls,{x=mx,y=my})
	end
end
