function dithered_shadow(x,y,r,c)
	local r2=r^2	
	for i=0,64 do
		for j=0,127 do
			local i2=i*2+j%2
			if ((x-i2)^2+(y-j)^2>r2) pset(i2,j,c)
		end
	end
end

