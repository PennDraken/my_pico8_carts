pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
  cls()
  poke(0x5f2d, 1)  -- enable devkit keyboard input
  output = ""
end

function _update60()
  cls(1)

  -- get key input
  local key = stat(31)

  if key == chr(8) then
    -- backspace
    output = sub(output, 1, #output - 1)
  elseif key >= " " and key <= "~" then
    -- add character
    output ..= key
  end

  -- draw live text
  print(output, 64 - #output * 2, 62, 7)
end






